apiVersion: source.toolkit.fluxcd.io/v1
kind: HelmRepository
metadata:
  name: podinfo
  namespace: {{ instance_name }}-{{ tool_id }}
spec:
  interval: 10m0s
  url: https://stefanprodan.github.io/podinfo
---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: podinfo
  namespace: {{ instance_name }}-{{ tool_id }}
spec:
  chart:
    spec:
      chart: podinfo
      sourceRef:
        kind: HelmRepository
        name: podinfo
      version: '>=6.0.0'
  interval: 10m0s
  values:
    replicaCount: 2
    ingress:
      enabled: true
      className: "public"
      hosts:
        - host: {{ domain }}
          paths:
            - path: /
              pathType: Prefix

